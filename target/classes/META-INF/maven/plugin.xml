<?xml version="1.0" encoding="UTF-8"?>
<plugin>
  <name>maven-dev-monitoring</name>
  <description></description>
  <groupId>com.hp.alm.plugins</groupId>
  <artifactId>maven-dev-monitoring</artifactId>
  <version>1.0.7</version>
  <goalPrefix>dev-monitoring</goalPrefix>
  <isolatedRealm>false</isolatedRealm>
  <inheritedByDefault>true</inheritedByDefault>
  <mojos>
    <mojo>
      <goal>monitor-and-report</goal>
      <description>Monitor maven command execution, and report the command and execution time to
a centralize location for further analysis. This plugin can help improve the
maven environment for the development group, find out Jankins slaves bottlenecks and more.
Using the centralize location we can find out &quot;weak computers&quot;, &quot;execution regressions in specific commands&quot;,
&quot;developer using maven in an inefficient way&quot; and more</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>true</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <phase>initialize</phase>
      <implementation>com.hp.qc.mavenmonitoring.MvnMonitorMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <threadSafe>true</threadSafe>
      <parameters>
        <parameter>
          <name>enableLogging</name>
          <type>boolean</type>
          <required>false</required>
          <editable>true</editable>
          <description>When false - no logging will be printed to the mvn console (even for
exceptions). When true - logging will be printed to the console on both
succeed and failed operations.</description>
        </parameter>
        <parameter>
          <name>enableMonitoring</name>
          <type>boolean</type>
          <required>false</required>
          <editable>true</editable>
          <description>enabling the monitoring, if false - Mojo is not doing a thing</description>
        </parameter>
        <parameter>
          <name>eventType</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>The event type (i.e. - CIEvent, DevEvent, etc..), can help later on when
aggregating the data for reports.

The best way to use this param is using settings.xml</description>
        </parameter>
        <parameter>
          <name>httpProxyHost</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>The http proxy host to use when reporting the mvn event to the serverUrl</description>
        </parameter>
        <parameter>
          <name>httpProxyPort</name>
          <type>java.lang.Integer</type>
          <required>false</required>
          <editable>true</editable>
          <description>The http proxy port to use when reporting the mvn event to the serverUrl</description>
        </parameter>
        <parameter>
          <name>serverUrl</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>The HTTP url to POST the maven event into (some kind of REST service)</description>
        </parameter>
        <parameter>
          <name>session</name>
          <type>org.apache.maven.execution.MavenSession</type>
          <required>true</required>
          <editable>false</editable>
          <description>The Maven Session Object</description>
        </parameter>
        <parameter>
          <name>timeout</name>
          <type>int</type>
          <required>false</required>
          <editable>true</editable>
          <description>connection timeout (so user won&apos;t need to wait in case that the service is down for instance)</description>
        </parameter>
      </parameters>
      <configuration>
        <enableLogging implementation="boolean" default-value="false">${maven.dev.monitoring.enableLogging}</enableLogging>
        <enableMonitoring implementation="boolean" default-value="true">${maven.dev.monitoring.enableMonitoring}</enableMonitoring>
        <eventType implementation="java.lang.String" default-value="defaultEvent">${maven.dev.monitoring.eventType}</eventType>
        <httpProxyHost implementation="java.lang.String" default-value="${settings.proxies[0].host}">${maven.dev.monitoring.httpProxyHost}</httpProxyHost>
        <httpProxyPort implementation="java.lang.Integer" default-value="${settings.proxies[0].port}">${maven.dev.monitoring.httpProxyPort}</httpProxyPort>
        <serverUrl implementation="java.lang.String" default-value="http://16.60.161.19:9200/agm/mvn-monitor">${maven.dev.monitoring.serverUrl}</serverUrl>
        <session implementation="org.apache.maven.execution.MavenSession">${session}</session>
        <timeout implementation="int" default-value="5000">${maven.dev.monitoring.timeout}</timeout>
      </configuration>
    </mojo>
  </mojos>
